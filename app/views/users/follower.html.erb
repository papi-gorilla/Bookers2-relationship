<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col">
      <h2>Follower Users</h2>

      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td>フォロー数: <%= user.follower.count %></td>
            <td>フォロワー数: <%= user.followed.count %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>